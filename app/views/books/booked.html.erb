<style type="text/css">
	.table>thead>tr>th {
		border-bottom: none; 
	}
	#stripeDiv{
		/*float: right;*/
		text-align: center;
	}
</style>
<div class="row">
<div class="col-md-2">
</div>
<div class="col-md-8">
<% if @booked_rooms.empty? %>
<h3>You haven't booked any rooms.</h3>
<h4 data-turbolinks="false">If you need to checkout, go to your <a href="cart">cart</a>, or book more <a href='hotels'>rooms.</a></h4>
<% else %>
<h3>My Booked Rooms</h3>
<div class="table-responsive">
<table class="table table-striped">
	<thead>
		<tr>
			<th>Hotel</th>
			<th>Address</th>
			<th>Room Number</th>
			<th>Smoking</th>
			<th>Adults</th>
			<th>Children</th>
			<th>Type</th>
			<th>Room Price</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @booked_rooms.each do |val| %>
		<tr>
		<td><%= val.hotel.name %></td>
		<td><%= val.hotel.address %></td>
		<td><%= val.number %></td>
		<td><%= val.smoking %></td>
		<td><%= val.occupancy_a %></td>
		<td><%= val.occupancy_c %></td>
		<td><%= val.room_type %></td>
		<td><%= number_to_currency(val.price, :precision => 2) %></td>
		<td><form action="/book_rooms/cancel/<%= val.id %>" method="POST" class="cancelForm">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<button type="submit" class="btn btn-danger">Cancel</button>
			</form>
		</td>
		</tr>
		<% end %>
		<tr>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td>Total:</td>
			<td class="green"><%= number_to_currency(@total, :precision => 2) %></td>
			<td></td>
<!-- 			<td><form action="/cart/checkout" method="POST">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<button type="submit" class="btn btn-success">Checkout</button>
				</form>
			</td> -->
		</tr>
	</tbody>
</table>
</div>
<% if @team.balance %>
	<!-- <h3>Pay Balance:</h3> -->
	<div id="stripeDiv">
	<h3>You have a remaining balance of <span class="green">$<%= @team.balance %></span></h3>
	<%= form_tag charges_path do %>
	  <article>
	    <% if flash[:error].present? %>
	      <div id="error_explanation">
	        <p><%= flash[:error] %></p>
	      </div>
	    <% end %>
	    <label class="amount">
	    </label>
	  </article>
	  <% @stripeTotal = (@team.balance * 100).to_i %>
	<input type="hidden" name="amount" value="<%= @stripeTotal %>">
	<input type="hidden" name="balanceClear" value="<%= @team.balance %>">
	  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
	          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
	          data-description="Book Rooms"
	          data-amount="<%= @stripeTotal %>"
	          data-locale="auto"></script>
	<% end %>
	</div>
<% end %>
<% end %>
</div>
<div class="col-md-2">
</div>
</div>
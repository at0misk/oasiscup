<% if @users.length == 0 %>
	<h2>No Users who reserved rooms 10 days ago, and have not made a downpayment</h2>
<% else %>
	<h2>Users who reserved rooms 10 days ago, and have not made a downpayment:</h2>
	<% @users.each do |val| %>
		<h3><%= val.first %> <%= val.last %>: <%= val.email %></h3>
		<hr>
	<% end %>
<% end %>
<script type="text/javascript">
	$(document).ready(function(){
		var x = <%= y %>
		x++;
		$('.add').click(function(){
			$('.app').append("<div class='cont col-md-3 staticDiv'><button type='button' class='close' aria-label='Close'><span aria-hidden='true'>&times;</span></button><div class='form-group'><label for='email' class=' control-label'>First Name</label><div class=''><input name='guest[first" + x + "]' type='text' class='form-control' id='email1' placeholder='First Name' /></div></div><div class='form-group'><label for='email' class=' control-label'>Last Name</label><div class=''><input name='guest[last" + x + "]' type='text' class='form-control' id='email1' placeholder='Last Name' /></div></div><div class='radio'><div class='form-check form-check-inline'><label class='form-check-label'><input type='radio' class='form-check-input' name='guest[type" + x + "]' value='Child'>Child</label></div><div class='form-check form-check-inline'><label class='form-check-label'><input type='radio' class='form-check-input'  name='guest[type" + x + "]' value='Adult'>Adult</label></div></div></div>");
			x++;
			$(".close").click(function(){
		    	$(this).parent().remove();
	    	});
		})
		$('.submitAdd').click(function(){
			$('#guestCreateForm').submit();
		})
	})

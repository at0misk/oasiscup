<div class="row">
<!-- <div class="col-md-2"></div> -->
	<form action="/guests/create" method="POST" id="guestCreateForm">
<div class="cont col-md-3 staticDiv">
	<% y = 0 %>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <div class="form-group">
            <label for="email" class=" control-label">
                First Name</label>
            <div class="">
                <input name="guest[first<%= y %>]" type="text" class="form-control" id="email1" placeholder="First Name" />
            </div>
        </div>
        <div class="form-group">
            <label for="email" class=" control-label">
                Last Name</label>
            <div class="">
                <input name="guest[last<%= y %>]" type="text" class="form-control" id="email1" placeholder="Last Name" />
            </div>
        </div>
            <div class="radio">
                <div class="form-check form-check-inline">
			      <label class="form-check-label">
			        <input type="radio" class="form-check-input" name='guest[type<%= y %>]' value='Child'>
			        Child
			      </label>
			    </div>
			    <div class="form-check form-check-inline">
			      <label class="form-check-label">
			        <input type="radio" class="form-check-input" name='guest[type<%= y %>]' value='Adult'>
			        Adult
			      </label>
			    </div>
            </div>

	<% if @transactions.length == 0 %>
	<div class="row">
	<div class="col-md-3">
	</div>
	<div class="col-md-6">
	<h2>You haven't placed any orders</h2>
	<h4 data-turbolinks="false" class="notFound">If you need to checkout, go to your <a href="cart">cart</a>, or book more <a href='hotels'>rooms.</a></h4>
	</div>
	<div class="cold-md-3">
	</div>
	<% else %>
	<% @transactions.each do |transaction| %>
	<div class="row">
		<div class="col-md-6">
		<h3>Confirmation Number: <%= transaction.transaction_code %></h3>
		<h3>Date: <%= transaction.created_at.strftime("%Y-%m-%d") %></h3>
		<h3>Type: <%= transaction.transaction_type %></h3>
		</div>
		<div class="col-md-6">
		</div>
	</div>
		<div class='row'>
			<div class="table-responsive col-md-12">
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th>Confirmation #</th>
				      <th>Hotel</th>
				      <th>Address</th>
				      <th>Smoking</th>
				      <th>Adults</th>
				      <th>Children</th>
				      <th>Type</th>
				      <th>Status</th>
				      <th>Price Per Night</th>
				      <th>Amount Due</th>
				      <th>Total</th>
				    </tr>
				  </thead>
				  <tbody>
		            <% @booked_rooms = Book.where(team_id: @user.team.id) %>
				    <% @user_rooms = Book.where(user_id: @user.id) %>
				    <% @total = 0 %>
				    <% @tax = 0 %>
				    <%   @booked_rooms.each do |val| %>
				    <%   @roomTax = val.hotel.tax %>
				    <% @tax += @roomTax * val.price %>
				    <%     @total += val.price %>
				    <%   end %>
				    <% @total_user = 0 %>
				    <% @tax_user = 0 %>
				    <%   @user_rooms.each do |val| %>
				    <%     @userRoomTax = val.hotel.tax %>
				    <%     @tax_user += @userRoomTax * val.price %>
				    <%     @total_user += val.price %>
				    <%   end %>
				    <% @total_balance_due = 0 %>
				    <% @userTotal = 0 %>
				    <% transaction.books.each do |val| %>
				    <tr>
				    <td><%= val.conf_code %></td>
				    <td><%= val.hotel.name %></td>
				    <td><%= val.hotel.address %></td>
				    <td><%= val.smoking %></td>
				    <td><%= val.occupancy_a %></td>
				    <td><%= val.occupancy_c %></td>
				    <td><%= val.room_type %></td>
				    <% if val.paid_status %>
				    <td class="green">Paid</td>
				    <% else %>
				    <td class="red">Balance Due</td>
				      <% @total_balance_due += val.price*2 %>
				    <% end %>
				    <td><%= number_to_currency(val.price, :precision => 2) %></td>
				    <% if val.paid_status %>
				    <td class="green">$0.00</td>
				    <% else %>
				    <td><%= number_to_currency(val.price*2, :precision => 2) %></td>
				    <% end %>
				    <td><%= number_to_currency(val.price*3, :precision => 2) %></td>
				    <% @userTotal += (val.price*3) %>
				    </tr>
				    <% end %>
				    <tr>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <% @depositTax = @tax_user %>
				      <td>Tax:</td>
				      <td><%= number_to_currency(@tax_user, :precision => 2) %></td>
				      <% @nightlyTax = @tax_user %>
				      <% @tax_user = @tax_user * 3 %>
				      <% if @user.user_balance %>
				      <td><%= number_to_currency((@user.user_balance-@total_balance_due), :precision => 2) %></td>
				      <% else %>
				      <td>$0.00</td>
				      <% end %>
				      <td><%= number_to_currency(@tax_user, :precision => 2) %></td>
				      <td></td>
				    </tr>
				    <tr>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td></td>
				      <td>Total:</td>
				      <td class="green"><%= number_to_currency((@userTotal+@tax_user), :precision => 2) %></td>
				    </tr>
				  </tbody>
				</table>
			</div>
					<% @amountVal = 0 %>
		<% transaction.books.each do |val| %>
			<% @amountVal += (val.price*3) %>
		<% end %>
		<h3>Amount Paid: <%= number_to_currency(transaction.total, :precision => 2) %></h3>
		<% if transaction.transaction_type == 'Down Payment' %>
		<h3>Amount Due: <%= number_to_currency(@amountVal-(@userTotal+@tax_user), :precision => 2) %></h3>
		<% end %>
		</div>
	<% end %>
	<% end %>
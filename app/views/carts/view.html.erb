<% @stripeTotal = (@total * 100).to_i %>
<% @stripeTotalDeposit = (@depositTotal * 100).to_i %>
<div class="row stripeRow">
<div id="stripeDiv">
<h3 class="payHeaders">Pay Deposit (One Night)</h3>
<h3 class="payHeaders green"><%= number_to_currency(@depositTotal, :precision => 2) %></h3>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
    </label>
  </article>
  <% @dpTax = @tax/3 %>
 <input type="hidden" name="amount" value="<%= @stripeTotalDeposit %>">
<input type="hidden" name="balancePaid" value="<%= @depositTotal %>">
<input type="hidden" name="totalTotal" value="<%= @total %>">
<input type="hidden" name="tax" value="<%= @dpTax %>">
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Book Rooms"
          data-amount="<%= @stripeTotalDeposit %>"
          data-locale="auto"></script>
<% end %>
</div>
<div id="stripeDiv">
<h3 class="payHeaders">Pay Full Ammount</h3>
<h3 class="payHeaders green"><%= number_to_currency((@total*3), :precision => 2) %></h3>
<%= form_for :sim_transaction, :url => AuthorizeNet::SIM::Transaction::Gateway::TEST do |f| %>
  <%= sim_fields(@sim_transaction) %>
  <%= label_tag 'x_amount', "Total: #{number_to_currency(@amount)}" %>
  <%= label_tag 'x_card_num', 'Credit Card Number'%>
  <%= text_field_tag 'x_card_num' %>
  <%= label_tag 'x_exp_date', 'Expiration Date (MMYY)'%>
  <%= text_field_tag 'x_exp_date' %>
  <br />
  <%= f.submit 'Purchase'%>
<% end %>
</div>
</div>
<% end %>
</div>
